<tool id="determine_gene_ontology" name="Determine gene ontology">
  <description>Determine gene ontology of associated gene IDs</description>
  <command interpreter="Rscript">determine-gene-ontology.R --annotation-db $annotation_db --gene-ids $gene_names_file --output-dir . 2>/dev/null</command>

  <inputs>
    <param name="gene_names_file" label="Gene names" type="data" format="tabular" />
    <param name="annotation_db" label="Annotation DB" type="text" value="org.Hs.eg.db" />
  </inputs>

  <outputs>
    <data name="molecular_functions" label="Molecular functions" format="csv" from_work_dir="molecular_functions.csv" />
    <data name="biological_processes" label="Biological processes" format="csv" from_work_dir="biological_processes.csv" />
    <data name="cellular_components" label="Cellular components" format="csv" from_work_dir="cellular_components.csv" />
  </outputs>

  <stdio>
    <exit_code range="1:" level="fatal" description="Unspecified error" />
  </stdio>

  <help>I am a giant *banana*.</help>
</tool>
