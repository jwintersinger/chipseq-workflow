<tool id="generate_peak_stats_and_plots" name="Generate peak stats and plots">
  <description>Generate peak stats and plots</description>
  <command interpreter="bash">generate-peak-stats-and-plots.sh -p $gff_file</command>

  <inputs>
    <param name="gff_file" label="GFF file" type="data" format="gff" />
  </inputs>

  <outputs>
    <data name="feature_lengths_histogram" label="Feature lengths histogram" format="pdf" from_work_dir="feature_lengths.pdf" />
    <data name="feature_spacings_histogram" label="Feature spacings histogram" format="pdf" from_work_dir="feature_spacings.pdf" />
    <data name="scores_histogram" label="Scores histogram" format="pdf" from_work_dir="scores.pdf" />
    <data name="feature_types" label="Feature types" format="tabular" from_work_dir="feature_types" />
    <data name="scores_stats" label="Scores stats" format="tabular" from_work_dir="scores_stats" />
  </outputs>

  <stdio>
    <exit_code range="1:" level="fatal" description="Unspecified error" />
  </stdio>

  <help>I am a giant *banana*.</help>
</tool>
